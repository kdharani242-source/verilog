// Code your design here
module encoder4x1(i,y);
  input [3:0] i;
  output [1:0] y;
  assign y[0]=i[1]+i[3];
  assign y[1]=i[2]+i[3];
endmodule
// Code your testbench here
// or browse Examples
module tb;
  reg [3:0] i;
  wire [1:0] y;
  encoder4x1 u1(i,y);
  initial
    begin
      $monitor("i=%b y=%b",i,y);
      for( int j=0;j<4;j++) begin
        i=0001<<j;#1;
      end
    end
endmodule

//output
# KERNEL: i=0001 y=00
# KERNEL: i=0010 y=01
# KERNEL: i=0100 y=10
# KERNEL: i=1000 y=11
