module mux2x1(d,s,y);
  input [1:0] d;
  input  s;
  output y;
  assign y=d[s];
endmodule
module mux4x1(d,s,y);
  input [3:0] d;
  input [1:0] s;
  output y;
  wire y0,y1;
  mux2x1 m1(.d(d[1:0]),.s(s[0]),.y(y0));
  mux2x1 m2(.d(d[3:2]),.s(s[0]),.y(y1));
  mux2x1 m3(.d({y0,y1}),.s(s[1]),.y(y));
endmodule
module mux16x1(d,s,y);
  input [15:0] d;
  input [3:0] s;
  output y;
  wire w1,w2,w3,w4;
  mux4x1 m4(.d(d[3:0]),.s(s[1:0]),.y(w1));
  mux4x1 m4(.d(d[7:4]),.s(s[1:0]),.y(w2));
  mux4x1 m4(.d(d[11:8]),.s(s[1:0]),.y(w3));
  mux4x1 m4(.d(d[15:12]),.s(s[1:0]),.y(w4));
  mux4x1 m4(.d({w1,w2,w3,w4}),.s(s[1:0]),.y(y));
endmodule
