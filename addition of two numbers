// Code your design here
1)module addition(a,b,y);
  input a,b;
  output [1:0]y;
  assign y=a+b;
endmodule
// Code your testbench here
// or browse Examples
module tb;
  logic a,b;
  logic [1:0]y;
  addition u1(.a(a),.b(b),.y(y));
  initial
    begin
      $monitor("a=%0b b=%0b y=%0b",a,b,y);
      a='b1;b='b1;
    end
endmodule
//output
a=1 b=1 y=10
