// Code your design here
module addition(a,b,y);
  input [2:0]a,b;
  output [3:0]y;
  assign y=a+b;
endmodule
// Code your testbench here
// or browse Examples
module tb;
  logic [2:0]a,b;
  logic [3:0]y;
  addition u1(.a(a),.b(b),.y(y));
  initial
    begin
      $monitor("a=%0d b=%0d y=%0d",a,b,y);
      a='d7;b='d7;#1;
      a='d6;b='d5;#1;
    end
endmodule
//output
